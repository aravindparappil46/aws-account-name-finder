{
  "manifest_version": 3,
  "name": "AWS Account Name Finder",
  "version": "1.0",
  "description": "For SSO-based AWS accounts, display the Account Name in the profile menu!",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": [
        "https://*.awsapps.com/*",
        "https://*.console.aws.amazon.com/*",
        "https://phd.aws.amazon.com/*",
        "https://*.console.amazonaws-us-gov.com/*",
        "https://*.console.amazonaws.cn/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
